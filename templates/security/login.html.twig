{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block main %}
<div class="container">
    <div class="centerPage">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form action="{{ path('app_connexion') }}" method="post">
            <div class="new">
                <div>
                <div class="spacing">
                    <label for="username" class="textStyle">Adresse email</label>
                </div>
                <div class="spacing">
                    <input type="email" id="username" name="_username" placeholder="exemple@gmail.com" value="{{ last_username }}" required class="inputColor" autocomplete="off">
                </div>
                </div>
                <div>
                <div class="spacing">
                    <label for="password" class="textStyle">Mot de passe</label>
                </div>
                <div class="spacing">
                    <input type="password" id="password" name="_password" placeholder="*******" required class="inputColor">
                </div>
                </div>
                <p class="textStyle">Vous n'Ãªtes pas encore inscrit ? Cliquez <a href="{{path('security.registration')}}">ici</a></p>
                <button type="submit" class="button">Se connecter</button>
            </div>
        </form>
    </div>
</div>


{% endblock %}